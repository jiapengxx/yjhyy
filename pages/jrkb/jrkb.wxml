<block wx:for="{{news}}" wx:for-index="idx" wx:for-item="item">   
<view wx:if="{{item.type==1}}">
<view bindtap='newsDetail' style='height:186rpx;width:100%;border:0.1rpx solid whitesmoke;'>
<view class='container1' >
<view class='title' >{{item.title}}</view>
<view class='container2'>
<image class='eye_icon' src='{{item.eye_icon}}' ></image>
{{item.count}}
<text >{{item.types}}</text>
</view>
<image class='big_pic' src='{{item.pic}}' ></image>
</view>
</view>
</view>
<view wx:else>   
<view bindtap='newsDetail' style='height:300rpx;margin-left:24rpx;margin-right:24rpx;width:100%;border:0.1rpx solid whitesmoke;'>
<view class=''  style='position:relative;top:20rpx;  height: 42rpx;width:702rpx;font-size: 30rpx;font-weight: 700;color: #333;'>{{item.title}}</view>
<view style='position:relative;top:50rpx;width:702rpx;height:180rpx;display:flex;flex-wrap:wrap;justify-content:space-between;'>
<image class='' src='{{item.pic}}' style='width:180rpx;height:180rpx;' ></image>
<image class='' src='{{item.pic}}' style='width:180rpx;height:180rpx;'></image>
<image class='' src='{{item.pic}}' style='width:180rpx;height:180rpx;'></image>
</view>
</view>
</view> 
</block>  







