/* pages/recruitment/recruitment.wxss */





.phone_personal{
    width: 100%;
    color:#333;
    height:99rpx;
    line-height:99rpx;
    text-indent: 2rem;

}
.phone_one{
    display: flex; 
    /* 用flex布局更方便。 */
    position: relative;
    top: -56rpx;
    left: 118rpx;
    justify-content: space-between;
    background-color:#fff;
    width:69%;
    height:99rpx;
    margin:0 auto;
    border-radius: 10rpx;
    border-bottom:2rpx solid rgb(255, 255, 255);
}
.person_box{
    position: relative;
    top: -55rpx;
    left: 210rpx;
}
.phone_select{
    margin-top:0;
    z-index: 100;
    position: absolute;
     /* 小程序中z-index和absolute需要同时存在，元素才能脱离文档。 */
}
.select_one{
    text-indent: 2rem;
    background-color:rgb(239,239,239);
    width:517.5rpx;   
    /* 脱离文档后元素width不能再用百分比。 */
    height:99rpx;
    line-height:99rpx;
    margin:0 5%;
    border-bottom:1rpx solid rgb(255, 255, 255);
}
.personal_image{
    z-index: 100;
    position: absolute;
    right:2.5%;
    width: 34rpx;
    height: 20rpx;
    margin:40rpx 20rpx 40rpx 0;
    transition: All 0.4s ease;  
    -webkit-transition: All 0.4s ease;
}
.rotateRight{
    transform: rotate(180deg); 
    /* 180°旋转图片。 */
}


