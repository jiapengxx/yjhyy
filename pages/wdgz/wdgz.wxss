
/* pages/company_shop/company_shop.wxss */

page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.swiper-tab {
  border-bottom: 0.1rpx solid #777;
  text-align: center;
  width: 100%;
  line-height: 80rpx;

}

.swiper-tab-list {
  background-color: whitesmoke;
  font-size: 36rpx;
  display: inline-block;
  width: 50%;
  color: #333;
}

.on {
  color: #4BA3FE;
  border-bottom: 5rpx solid #4BA3FE;
}
.swiper-box {
  height: 100%;
  display: block;
  width: 100%;
}

.point {
  position: relative;
  top: -170rpx;
  left: 600rpx;
  height: 12rpx;
  width: 70rpx;
  padding:30rpx;
}

.point_on {
  position: relative;
  top: -170rpx;
  left: 400rpx;
  height: 12rpx;
  width: 70rpx;
  padding:30rpx;

}

.cancel {
  display: none;
}

.cancel_on {
  position: relative;
  color: #fff;
  top: -275rpx;
  line-height: 150rpx;
  left: 535rpx;
  height: 150rpx;
  width: 216rpx;
  background-color: #fe0100;
  font-size:14px;
  text-align:center;
  border-radius:10rpx;

}